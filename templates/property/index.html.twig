{% extends 'base.html.twig' %}

{% block title %} {{parent()}}-Tous nos biens{% endblock %}

{% block body %}

<div class="container">
    <h1 class="center-align">Les biens en vente</h1>
    <div class="row">
        <div class="card-panel col l12 ">
            <div class="row">
                <div class="container ">
                    <div class="row ">
                        <div class="col s11">
                            <h4 class="title-filter">Filtrez vos recherches</h4>
                        </div>

                        <div class="col s12 m12 ">
                            {{form_start(form)}}
                            <div class="row">
                                <div class="col s12 l3">
                                    {{form_row(form.minSurface)}}
                                </div>
                                <div class="col s12 l3">
                                    {{form_row(form.maxPrice)}}
                                </div>
                                <div class="col s12 l3">
                                    {{form_row(form.options)}}
                                </div>

                                <div class="col s12 l3">
                                    <button class=" col s12 btn-large">Rechercher
                                    </button>
                                </div>
                            </div>
                            {{form_end(form)}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        {% for property in properties %}
        {{ include('property/_property.html.twig') }}
        {% else %}
        <div class="container col l4 yellow lighten-4">
            <p class="valign-wrapper"><i class="material-icons">warning </i>&nbsp; Il n'y a pas de r√©sultats avec
                cet ensemble d'options</p>
        </div>

        {% endfor %}
    </div>
    <div class="row">
        <div class="navigation row center-align{# col s12 l6 #} {# offset-l4 #}">
            {{ knp_pagination_render(properties) }}
        </div>
    </div>
</div>

{% endblock %}