{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Modifier le bien{% endblock %}

{% block body %}


<div class="container">
    <h1>Modifier le bien</h1>
{{form_start(form)}}    
    <div class="row">
        <div class="col l6">{{form_row(form.title)}}</div>
        <div class="col l6">{{form_row(form.surface)}}</div>
        <div class="col l6">{{form_row(form.price)}}</div>
            {# {{ include('admin/_form.html.twig', {'button_label': 'Update'}) }} #}
        
    </div>
    <div class="row">
        <div class="col l2">{{form_row(form.rooms)}}</div>
        <div class="col l2">{{form_row(form.bedrooms)}}</div>
        <div class="col l2">{{form_row(form.heat)}}</div>
        <div class="col l2">{{form_row(form.floor)}}</div>
    </div>
    <div class="row">
        <div class="col l4">{{form_row(form.address)}}</div>
        <div class="col l4">{{form_row(form.city)}}</div>
        <div class="col l4">{{form_row(form.postal_code)}}</div>
        <div class="col l4">{{form_row(form.is_sold)}}</div>
    </div>

</div>
<button class="btn">{{ button_label|default('Save') }}</button>
{{form_start(form)}}    

<a href="{{ path('admin_property_index') }}">back to list</a>

