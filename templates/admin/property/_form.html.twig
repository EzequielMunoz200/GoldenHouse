{{form_start(form)}}
<div class="row">
    <div class="col s12 l4">{{form_row(form.title)}}</div>
    <div class="col s12 l4">{{form_row(form.surface)}}</div>
    <div class="col s12 l4">{{form_row(form.price)}}</div>

    {# {{ include('admin/_form.html.twig', {'button_label': 'Update'}) }} #}
</div>
<div class="row">
    <div class="col s12 l12">{{form_row(form.description)}}</div>
</div>
<div class="row">
    <div class="col s12 l2">{{form_row(form.rooms)}}</div>
    <div class="col s12 l2">{{form_row(form.bedrooms)}}</div>
    <div class="col s12 l2">{{form_row(form.floor)}}</div>
    <div class="col s12 l3">{{form_row(form.heat)}}</div>
    <div class="col s12 l3">{{form_row(form.options)}}</div>
</div>
<div class="row">
    <div class="col s12 l4">{{form_row(form.address)}}</div>
    <div class="col s12 l4">{{form_row(form.city)}}</div>
    <div class="col s12 l4">{{form_row(form.postal_code)}}</div>
    <div class="col s12 l4">{{form_row(form.is_sold)}}</div>
</div>


{% if action == 'edit' and property.images is not empty %}
<div class="row">
    <h6>Mettre Ã  jour les images</h6>
</div>

{% for image in property.images %}
<div class="row">
    <div class="col s12 m6">
        <div class="card">
            <div class="card-image">
                <img src="{{asset('/uploads/' ~ image.imgPath)}}">
                <a href="{{ path("admin_image_delete", {id: image.id}) }}"
                    class="btn-floating halfway-fab waves-effect waves-light red" data-delete
                    data-token="{{ csrf_token('delete' ~ image.id) }}"><i class="material-icons">delete</i></a>
            </div>
        </div>
    </div>
</div>
{% endfor %}

{% endif %}

<div class="row">
    <h6>Ajouter des images</h6>
</div>
<div class="row">
    <div class="col s12 l4">{{form_row(form.images)}}</div>
</div>

{# {{form_rest(form)}} #}

<div class="row">
    <button class="btn-large col s12 l3">{{ button_label|default('Valider') }}</button>
</div>


{{form_end(form)}}