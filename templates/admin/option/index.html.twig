{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Liste des options{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h4>Liste des options</h4>
    </div>

    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Option</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for option in options %}
                <tr>
                    <td>{{ option.id }}</td>
                    <td>{{ option.name }}</td>
                    <td>
                        <a href="{{ path('admin_option_show', {'id': option.id}) }}">Afficher</a>
                        <a href="{{ path('admin_option_edit', {'id': option.id}) }}">Modifier</a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="row">
        <a href="{{ path('admin_option_new') }}">Cr√©er une option</a>
    </div>

</div>

{% endblock %}